@page "/"
@inject IJSRuntime JSRuntime
@inject NotificationService NotificationService
@using Microsoft.AspNetCore.Components
@using System.ComponentModel.DataAnnotations



<!-- Hero Section с максимально ярким фоном  -->

<section style="background: linear-gradient(rgba(102, 126, 234, 0.0), rgba(50, 102, 234, 0.0)), url('/images/hero-bg.jpg');
              background-size: cover;
              background-position: center;
              background-attachment: fixed;
              color: white;
              padding: 150px 0;
              text-align: center;
              position: relative;">

    <div class="container">
    </div>
     <div class="glass-section">
        <div class="glass-container">
            <div class="container">
                <RadzenText Style="font-size: 3.5rem; font-weight: 900; margin-bottom: 1.5rem; color: #ffffff; text-shadow: 4px 4px 8px rgba(0,0,0,0.8);" Tag="h1">Автоматизация элеваторов</RadzenText>
